<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/recipe_step_details_fragment">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/recipe_step_details_player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:fastforward_increment="1000"
        app:rewind_increment="1000"/>

    <ImageView
        android:id="@+id/recipe_step_details_no_video_imageview"
        android:contentDescription="@string/no_video_placeholder_image"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_video" />
</merge>