<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.RecipeStepDetailsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/recipe_step_details_player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp" />

        <ImageView
            android:id="@+id/recipe_step_details_no_video_imageview"
            android:contentDescription="@string/no_video_placeholder_image"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_video"/>

    </FrameLayout>

    <TextView
        android:id="@+id/recipe_step_details_instructions_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="2" />

</LinearLayout>