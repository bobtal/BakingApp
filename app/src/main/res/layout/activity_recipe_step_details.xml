<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.RecipeStepDetailsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_margin="8dp">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/recipe_step_details_player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/recipe_step_details_no_video_imageview"
            android:contentDescription="@string/no_video_placeholder_image"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_video"/>

    </FrameLayout>

    <TextView
        android:id="@+id/recipe_step_details_instructions_textview"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="0dp"
        android:layout_weight="5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/recipe_step_details_button_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/exo_controls_previous"
            app:backgroundTint="@color/colorPrimary" />

        <Button
            android:id="@+id/recipe_step_details_button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/exo_controls_next"
            app:backgroundTint="@color/colorPrimary" />

    </RelativeLayout>

</LinearLayout>